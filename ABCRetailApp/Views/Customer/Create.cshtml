@model ABCRetailApp.Models.CustomerProfile

@{
    ViewData["Title"] = "Create Customer Profile";
}

<h2 class="mb-5 text-white text-center">New Customer Profile</h2>

<form asp-action="Create" method="post" class="form-horizontal">
    <div class="form-group row mb-4">
        <label asp-for="FirstName" class="col-sm-2 col-form-label text-white">First Name</label>
        <div class="col-sm-10">
            <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-4">
        <label asp-for="Surname" class="col-sm-2 col-form-label text-white">Surname</label>
        <div class="col-sm-10">
            <input asp-for="Surname" class="form-control" placeholder="Enter surname" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-4">
        <label asp-for="Email" class="col-sm-2 col-form-label text-white">Email</label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Enter email address" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-5">
        <div class="col-sm-10 offset-sm-2">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
        </div>
    </div>

    <style>
        body {
            background-color: darkslateblue;
        }

        .text-white {
            color: white;
        }

        label {
            color: white;
        }
    </style>
</form>
