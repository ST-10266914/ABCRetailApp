@model IEnumerable<ABCRetailApp.Models.CustomerProfile>

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: darkslateblue;
            margin: 0;
            padding: 20px;
        }

        h1 {
            color: white;
        }

        .table-container {
            background-color: #34495e;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        thead {
            background-color: #3498db;
            color: #fff;
        }

        th {
            padding: 12px;
            text-align: left;
            color: white;
        }

        td {
            padding: 12px;
            text-align: left;
            color: white;
        }

        tbody tr:nth-child(even) {
            background-color: #34495e;
        }

        tbody tr:hover {
            background-color: grey;
        }

        .btn {
            background-color: #3498db;
            color: #fff;
            border: none;
            border-radius: 4px;
            padding: 10px 20px;
            text-decoration: none;
            font-size: 16px;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #3498db;
            margin-bottom: 20px; /* Add this to create space between the button and the table */
        }

            .btn-primary:hover {
                background-color: #218838;
            }

        .btn:hover {
            background-color: #0056b3;
        }

        .btn-danger {
            background-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }
    </style>
    <script>
        function confirmDelete(event) {
            if (!confirm('Are you sure you want to delete this customer?')) {
                event.preventDefault(); // Prevent form submission
            }
        }
    </script>
</head>
<body>
    <h1 class="my-4 text-center">Customer Profiles</h1>
    <a href="@Url.Action("Create")" class="btn btn-primary">Add New Customer</a>
    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Surname</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.FirstName</td>
                        <td>@customer.Surname</td>
                        <td>@customer.Email</td>
                        <td>
                            <form asp-action="Delete" method="post" style="display:inline;" onsubmit="confirmDelete(event)">
                                <input type="hidden" name="partitionKey" value="@customer.PartitionKey" />
                                <input type="hidden" name="rowKey" value="@customer.RowKey" />
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>
